/* ðŸ”¹ Cyber Glyph Overlay */
.glyph-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none; /* Allows clicks to pass through */
  z-index: 5;
}

.glyph {
  position: absolute;
  font-size: 1.5rem;
  color: #00f0ff;
  text-shadow: 0 0 10px #00f0ff;
  pointer-events: auto; /* Glyphs can be interacted with */
  opacity: 0.3;
  transition: opacity 0.3s, transform 0.3s;
}

.glyph:hover {
  opacity: 1;
  transform: scale(1.5);
  text-shadow: 0 0 20px #ff00ff;
}

// ðŸ”¹ Cyber Glyph Overlay Generation
function createGlyphs(count) {
  const glyphOverlay = document.getElementById("glyph-overlay");
  const glyphChars = ["Î”", "Î¨", "Î©", "Î£", "Î»", "Ï€", "Î¸", "Ï†", "Î¾", "Î¶"];
  for (let i = 0; i < count; i++) {
    const glyph = document.createElement("div");
    glyph.className = "glyph";
    glyph.textContent = glyphChars[Math.floor(Math.random() * glyphChars.length)];
    glyph.style.left = Math.random() * 100 + "vw";
    glyph.style.top = Math.random() * 100 + "vh";
    glyph.style.animation = `float-glyph ${5 + Math.random() * 5}s infinite`;
    glyphOverlay.appendChild(glyph);

    // Add hover effect to reveal message
    glyph.addEventListener("mouseover", () => {
      glyph.textContent = "Vyne Lives";
      glyph.style.color = "#ff00ff";
    });
    glyph.addEventListener("mouseout", () => {
      glyph.textContent = glyphChars[Math.floor(Math.random() * glyphChars.length)];
      glyph.style.color = "#00f0ff";
    });
  }
}
createGlyphs(20); // Add 20 glyphs

// Append to existing style.textContent
const glyphStyle = `
  @keyframes float-glyph {
    0% { transform: translate(0, 0); }
    50% { transform: translate(10px, 10px); }
    100% { transform: translate(0, 0); }
  }
`;
style.textContent += glyphStyle;

// ðŸ”¹ Cybernetic Particle Explosion on Click
function createParticleExplosion(x, y) {
  // Create a container for particles
  const container = document.createElement("div");
  container.className = "particle-container";
  document.body.appendChild(container);

  // Generate 20 particles
  for (let i = 0; i < 20; i++) {
    const particle = document.createElement("div");
    particle.className = "particle";
    if (i % 2 === 0) particle.classList.add("alt"); // Alternate colors
    particle.style.left = x + "px";
    particle.style.top = y + "px";
    container.appendChild(particle);

    // Animate particle
    const angle = Math.random() * 360;
    const distance = 50 + Math.random() * 100; // Random distance between 50-150px
    const duration = 0.5 + Math.random() * 0.5; // Random duration between 0.5-1s
    gsap.to(particle, {
      x: Math.cos(angle * Math.PI / 180) * distance,
      y: Math.sin(angle * Math.PI / 180) * distance,
      opacity: 0,
      duration: duration,
      ease: "power2.out",
      onComplete: () => {
        particle.remove();
      }
    });
  }

  // Play explosion audio
  const particleAudio = document.getElementById("particle-audio");
  particleAudio.currentTime = 0;
  particleAudio.volume = 0.3; // Low volume
  particleAudio.play().catch(error => console.log("Audio play failed:", error));

  // Remove container after animation
  setTimeout(() => container.remove(), 2000);
}

// Trigger on click
document.addEventListener("click", (e) => {
  const x = e.clientX;
  const y = e.clientY;
  createParticleExplosion(x, y);
});
